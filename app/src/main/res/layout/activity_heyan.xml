                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    style="@style/TextNormal_Black"
                    android:text="排污口类型"
                    android:drawableRight="@drawable/bitian"
                />

                <TextView
                    android:id="@+id/outletTypeTv"
                    style="@style/EditText_Black"
                    android:drawableRight="@drawable/pickerview_jiantou"
                    android:text="请选择..." />

            </LinearLayout>

            <View
                style="@style/LineThinMatchStyle"
                android:layout_marginTop="5dp" />

